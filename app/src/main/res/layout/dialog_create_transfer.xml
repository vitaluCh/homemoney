<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilOperationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:inputType="textCapSentences"/>
        </android.support.design.widget.TextInputLayout>

        <!--     <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/dialog_storage"
                 android:layout_below="@+id/tilDialogOperationName"
                 android:layout_marginLeft="16dp"
                 android:layout_marginTop="10dp"
                 android:textSize="16sp"/>-->
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_from"
            android:layout_below="@+id/tilOperationName"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv1"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            tools:context=".fragment.StorageListFragment">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imOneStorage"
                tools:src="@drawable/storage11"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvOneStorageName"
                android:layout_toRightOf="@+id/imOneStorage"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_centerVertical="true"
                android:text="@string/add_storage_please"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvOneStorageCurrency"
                android:layout_toRightOf="@+id/tvOneStorageName"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                tools:text="UAH"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imStorageChoice"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_choice_down_24dp"
                android:clickable="true"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_to"
            android:layout_below="@+id/relativeLayout"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
        />

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv2"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            tools:context=".fragment.StorageListFragment">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imTwoStorage"
                tools:src="@drawable/storage11"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTwoStorageName"
                android:layout_toRightOf="@+id/imTwoStorage"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_dark"
                android:layout_centerVertical="true"
                android:text="@string/chose_storage_please"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTwoStorageCurrency"
                android:layout_toRightOf="@+id/tvTwoStorageName"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                tools:text="USD"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imStorageChoice2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_choice_down_24dp"
                android:clickable="true"
                />

        </RelativeLayout>


