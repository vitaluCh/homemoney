        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilDialogOperationDate"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:inputType="none"
                android:focusableInTouchMode="false"
                android:cursorVisible="false" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/imDialogAmoutCalc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calculator"
            android:layout_below="@+id/relativeLayout3"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:contentDescription="@string/imCalculator" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilDialogOperationMount"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout3"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/imDialogAmoutCalc">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:inputType="numberDecimal"
                android:gravity="center"
                />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tvDialogOperationResultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_result"
            android:layout_below="@+id/tilDialogOperationDate"
            android:layout_marginLeft="16dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvDialogOperationResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tilDialogOperationDate"
            android:layout_toRightOf="@+id/tvDialogOperationResultText"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="0"/>

        <TextView
            android:id="@+id/tvDialogOperationResultCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tilDialogOperationDate"
            android:layout_toRightOf="@+id/tvDialogOperationResult"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            tools:text="USD"/>

        <!--////////////////////////////-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/tvDialogOperationResultText"
            android:id="@+id/relativeLayout2">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tv3"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:text="1"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tvCurrency1"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv3"
                    android:textSize="16sp"
                    tools:text="UAH"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tv4"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tvCurrency1"
                    android:textSize="16sp"
                    android:text="="
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilItem"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv4"
                    android:layout_marginLeft="10dp"

                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:inputType="numberDecimal"
                        android:gravity="center"/>

                </android.support.design.widget.TextInputLayout>

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
